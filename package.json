{
	"name": "jjalcloud-monorepo",
	"private": true,
	"scripts": {
		"prepare": "lefthook install",
		"format": "biome format --write .",
		"lint": "biome check .",
		"lint:fix": "biome check --write .",
		"build": "pnpm -r build",
		"dev": "pnpm -r dev",
		"test:e2e:web": "pnpm --filter web test:e2e",
		"test:e2e:web:oauth:setup": "pnpm --filter web test:e2e:oauth:setup",
		"test:e2e:web:oauth": "pnpm --filter web test:e2e:oauth",
		"db:generate": "pnpm --filter web db:generate",
		"db:migrate:local": "pnpm --filter web db:migrate:local",
		"db:migrate:remote": "pnpm --filter web db:migrate:remote"
	},
	"devDependencies": {
		"@biomejs/biome": "2.3.13",
		"lefthook": "^2.0.16"
	},
	"packageManager": "pnpm@10.15.0+sha512.486ebc259d3e999a4e8691ce03b5cac4a71cbeca39372a9b762cb500cfdf0873e2cb16abe3d951b1ee2cf012503f027b98b6584e4df22524e0c7450d9ec7aa7b"
}
