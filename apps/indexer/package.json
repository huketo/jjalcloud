{
	"name": "@jjalcloud/indexer",
	"type": "module",
	"scripts": {
		"dev": "tsx watch src/index.ts start",
		"build": "tsup src/index.ts --format esm --clean",
		"start": "$npm_execpath run build && node dist/index.js start",
		"backfill:local": "tsx src/index.ts backfill",
		"backfill:remote": "NODE_ENV=production tsx src/index.ts backfill"
	},
	"dependencies": {
		"@atcute/client": "^4.2.1",
		"@atproto/identity": "^0.4.4",
		"@atproto/sync": "^0.1.6",
		"@jjalcloud/common": "workspace:*",
		"better-sqlite3": "^11.8.1",
		"dotenv": "^17.2.3",
		"drizzle-orm": "catalog:",
		"pino": "^9.6.0",
		"ws": "^8.18.0"
	},
	"devDependencies": {
		"@types/better-sqlite3": "^7.6.12",
		"@types/node": "^22.10.6",
		"@types/ws": "^8.5.13",
		"tsup": "^8.5.1",
		"tsx": "^4.19.2",
		"typescript": "^5.7.3",
		"zod": "^4.3.6"
	}
}
