{
	"name": "@jjalcloud/web",
	"type": "module",
	"scripts": {
		"format": "biome format --write",
		"lint": "biome check",
		"lint:fix": "biome check --write",
		"dev": "vite",
		"test:e2e": "playwright test",
		"test:e2e:ui": "playwright test --ui",
		"test:e2e:headed": "playwright test --headed",
		"test:e2e:install": "playwright install chromium",
		"test:e2e:oauth:setup": "E2E_OAUTH=1 E2E_OAUTH_BOOTSTRAP=1 playwright test --project=oauth-setup --headed",
		"test:e2e:oauth": "E2E_OAUTH=1 playwright test --project=oauth-chromium",
		"build": "$npm_execpath run uno && vite build",
		"preview": "$npm_execpath run build && vite preview",
		"deploy": "$npm_execpath run build && wrangler deploy",
		"cf-typegen": "wrangler types --env-interface CloudflareBindings",
		"lexgen": "lex gen-server ./src/lexicon ./lexicons/**/**/**/*.json",
		"uno": "unocss 'src/**/*.{tsx,ts}' -o src/uno.css",
		"uno:watch": "unocss 'src/**/*.{tsx,ts}' -o src/uno.css --watch",
		"db:generate": "drizzle-kit generate",
		"db:migrate:local": "wrangler d1 migrations apply jjalcloud_db --local",
		"db:migrate:remote": "wrangler d1 migrations apply jjalcloud_db --remote"
	},
	"dependencies": {
		"@atcute/atproto": "^3.1.10",
		"@atcute/client": "^4.2.1",
		"@atcute/lexicons": "^1.2.6",
		"@atproto/api": "^0.18.17",
		"@atproto/common-web": "^0.4.13",
		"@atproto/jwk-jose": "^0.1.11",
		"@atproto/lexicon": "^0.6.1",
		"@jjalcloud/common": "workspace:^",
		"atproto-oauth-client-cloudflare-workers": "^0.2.2",
		"drizzle-orm": "catalog:",
		"hono": "^4.11.5",
		"multiformats": "^13.4.2"
	},
	"devDependencies": {
		"@playwright/test": "^1.56.0",
		"@atproto/lex-cli": "^0.9.8",
		"@biomejs/biome": "2.3.13",
		"@cloudflare/vite-plugin": "^1.2.3",
		"@cloudflare/workers-types": "^4.20260203.0",
		"@unocss/cli": "^66.6.0",
		"drizzle-kit": "catalog:",
		"unocss": "^66.6.0",
		"vite": "^6.3.5",
		"vite-plugin-checker": "^0.12.0",
		"vite-ssr-components": "^0.5.2",
		"wrangler": "^4.17.0"
	},
	"packageManager": "pnpm@10.15.0+sha512.486ebc259d3e999a4e8691ce03b5cac4a71cbeca39372a9b762cb500cfdf0873e2cb16abe3d951b1ee2cf012503f027b98b6584e4df22524e0c7450d9ec7aa7b"
}
